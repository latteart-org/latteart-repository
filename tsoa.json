{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "./docs/api",
    "specVersion": 3,
    "basePath": "/api/v1",
    "host": "localhost:3002",
    "schemes": ["http"],
    "specFileBaseName": "api"
  },
  "routes": {
    "routesDir": "src/routes",
    "basePath": "/api/v1"
  },
  "ignore": ["**/node_modules/**"]
}
